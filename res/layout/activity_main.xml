<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"


    android:background="@color/page" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal|top"
        android:orientation="vertical" >

        <!-- tweet edittext -->

        <EditText
            android:id="@+id/txtUpdateStatus"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:lines="2" 
            
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_weight="1"
            android:gravity="left|top"
            
            android:maxLength="140"
            android:background="@color/textbox_page"
            android:hint="tweet something original, prove you're actually awake"
            android:ems="10"
            
            android:textColor="@color/textbox_text"
            android:textColorHint="@color/textbox_hint"
            android:visibility="visible" />

        <!-- tweet/stop alarm -->
        <Button
            android:id="@+id/btnUpdateStatus"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:text="turn off alarm"
            android:visibility="visible" />

        <!-- Retry Connection Button -->

        <Button
            android:id="@+id/btnRetryConnection"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="retry"
            android:visibility="gone" />
    </LinearLayout>
 
    <!-- Twitter Login Button -->
    <Button android:id="@+id/btnLoginTwitter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Login with Twitter"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="30dip"
        android:visibility="gone"/>
 
    <!-- user name label -->
    <TextView android:id="@+id/lblUserName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:layout_marginTop="0dip" />
 
    <!-- label update status -->
 
    <!-- Tweet EditText -->

  
</LinearLayout>